<h1 style="text-align: center"><u>Books</u></h1>

<button onclick="window.location.href='/books/new'">Add book to database</button>
<table>
  <thead>
  <tr>
    <th>Book Name</th>
    <th>Author</th>
    <th>Book Link</th>
  </tr>
  </thead>
  <% @books.each do |book|%>

      <tr>
        <th><%= book.title %></th>
        <th><%= book.author %></th>
        <th><%= link_to "Book Link", book %></th>
      </tr>

  <% end %>
</table>
